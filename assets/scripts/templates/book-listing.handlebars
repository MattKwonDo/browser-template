{{#each books as |book|}}

<!-- {{> partial}} -->

 <!-- Developers, why are we using data-id and not just id? -->
  <!-- <h1 > </h1> -->
  <ul data-id="{{book.id}}" class="removeBooks {{book.id}}">
    <li class="removeBooks {{book.id}}">
      Title: {{book.title}}
    </li>
    <li class="removeBooks {{book.id}}">
      <small>
        {{#if book.description}}
          {{book.description}}
        {{else}}
          No description.
        {{/if}}
      </small>
    </li>
    <li>
      <button type="button" id="{{book.id}}" class="removeBooks removeBooksButton {{book.id}}" >
        Remove
      </button>
    </li>
  </ul>
  <div class="{{book.id}}"> book.id: {{book.id}} </div>

{{/each}}
